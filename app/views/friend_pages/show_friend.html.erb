<div class="row-fluid">
  <div class="span3">
    <%= image_tag @friend_page.img, :class => 'img-rounded' %>
  </div>
  <div class="span9">
    <h1>Me and <%= @friend_page.name %> met at 
      <% if @friend_page.location.nil? %>
        ______
      <% else %>
          <%= @friend_page.location %>
        <% end %>
  </h1>
  </div>
</div>
<div class="row-fluid">
  <div class="span9">
    <h1>Notes</h1>
    <p class="lead"><%= @friend_page.notes %></p>
    <button class="btn btn-warning"><a href="/friend_pages/<%= params[:fb_id] %>/edit">Edit Page</a></button>
  </div>
</div>
